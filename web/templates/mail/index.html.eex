<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>To</th>
      <th>From</th>
      <th>Subject</th>
    </tr>
  </thead>
  <tbody>
    <%= for email <- @emails do %>
      <tr>
        <td><%= email.id %></td>
        <td><%= email.to %></td>
        <td><%= email.from %></td>
        <td><%= email.subject %></td>
        <td><%= link "show", to: mail_path(@conn, :show, email.id), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
